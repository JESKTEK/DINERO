<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b1d9b7"
    tools:context=".MainActivity">

    <!-- Top Right Logo Image -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="Logo"
        app:srcCompat="@mipmap/dinero_logo_round" />

    <!-- Main Form -->
    <LinearLayout
        android:id="@+id/formLayout"
        android:layout_width="match_parent"
        android:layout_height="603dp"
        android:layout_below="@id/imageView"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="126dp"
            android:text="REGISTER"
            android:textColor="#5C9920"
            android:textSize="40sp"
            android:textStyle="bold" />

        <!-- Full Name -->
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextFullName"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:hint="Name"
                android:inputType="text"
                android:textColor="#58735d"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Email -->
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextEmailAddress"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:hint="Enter Email"
                android:inputType="textEmailAddress"
                android:textColor="#58735d"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Password -->
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:hint="Enter Password"
                android:inputType="textPassword"
                android:textColor="#58735d"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Confirm Password -->
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextPasswordConfirm"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:textColor="#58735d"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Register Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/registerButton"
            android:layout_width="240dp"
            android:layout_height="63dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_register_background"
            android:fontFamily="sans-serif-condensed"
            android:text="REGISTER"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Back to Main Menu (Underlined) -->
        <Button
            android:id="@+id/loginTransitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif-condensed"
            android:padding="8dp"
            android:text="@string/back_to_main_menu_link"
            android:textAlignment="center"
            android:textColor="#58735d"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>
