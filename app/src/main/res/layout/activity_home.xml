<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b1d9b7"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="24dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="155dp">

        <ImageView
            android:id="@+id/dineroLogoClickable"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:contentDescription="Dinero Logo - Tap to Logout"
            app:srcCompat="@mipmap/dinero_logo_round"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless" />

    </FrameLayout>


    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:fontFamily="sans-serif-condensed"
        android:letterSpacing="0.05"
        android:outlineAmbientShadowColor="@color/black"
        android:text="DINERO"
        android:textAllCaps="true"
        android:textColor="#81b522"
        android:textSize="60sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/appSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif-condensed"
        android:letterSpacing="0.05"
        android:text="LA BUDGET PERSONAL"
        android:textAllCaps="true"
        android:textColor="#76B041"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/walletIcon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginEnd="16dp"
            android:src="@mipmap/home_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/walletTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WALLET VALUE:"
                android:textColor="#8B0000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <FrameLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp">

                    <TextView
                        android:id="@+id/plusSign"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="+"
                        android:textColor="#6AA84F"
                        android:textSize="30sp"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground" />
                </FrameLayout>


                <TextView
                    android:id="@+id/walletValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R0.00"
                    android:textColor="#6AA84F"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnBudgetPlan"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/btn_budget_plan_background"
        android:drawableLeft="@mipmap/stack_icon"
        android:drawablePadding="12dp"
        android:paddingStart="10dp"
        android:text=" BUDGET PLAN"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnMyGoals"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_goals_background"
        android:drawableLeft="@mipmap/goal_icon"
        android:drawablePadding="12dp"
        android:paddingStart="10dp"
        android:text="MY GOALS"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDashboard"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_dashboard_background"
        android:drawableLeft="@mipmap/dash_icon"
        android:drawablePadding="12dp"
        android:paddingStart="10dp"
        android:text="DASHBOARD"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />


</LinearLayout>
