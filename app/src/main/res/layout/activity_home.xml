<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b1d9b7"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="24dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:contentDescription="Logo"
            app:srcCompat="@mipmap/dinero_logo_round" />
    </FrameLayout>


    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:fontFamily="sans-serif-condensed"
        android:letterSpacing="0.05"
        android:outlineAmbientShadowColor="@color/black"
        android:text="DINERO"
        android:textAllCaps="true"
        android:textColor="#81b522"
        android:textSize="60sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/appSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif-condensed"
        android:letterSpacing="0.05"
        android:text="LA BUDGET PERSONAL"
        android:textAllCaps="true"
        android:textColor="#76B041"
        android:textSize="30sp"
        android:textStyle="bold" />

    <!-- Wallet Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <!-- WALLET VALUE Field -->
        <TextView
            android:id="@+id/walletTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WALLET VALUE:"
            android:textColor="#8B0000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- AMOUNT Field -->
            <TextView
                android:id="@+id/plusSign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="+"
                android:textColor="#6AA84F"
                android:textSize="40sp" />

            <!-- AMOUNT Field -->
            <TextView
                android:id="@+id/walletValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="R0.00"
                android:textColor="#6AA84F"
                android:textSize="40sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/walletIcon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/home_icon" />
        </LinearLayout>
    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnBudgetPlan"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/btn_budget_plan_background"
        android:drawableLeft="@mipmap/stack_icon"
        android:drawablePadding="12dp"
        android:paddingStart="10dp"
        android:text=" BUDGET PLAN"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- MY GOALS Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnMyGoals"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_goals_background"
        android:drawableLeft="@mipmap/goal_icon"
        android:drawablePadding="12dp"
        android:paddingStart="10dp"
        android:text="MY GOALS"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- DASHBOARD Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDashboard"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_dashboard_background"
        android:drawableLeft="@mipmap/dash_icon"
        android:drawablePadding="12dp"
        android:paddingStart="10dp"
        android:text="DASHBOARD"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>
