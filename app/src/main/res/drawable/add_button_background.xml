<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#AACCA2"/> <!-- Soft shadow -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Button layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#8BAA63" /> <!-- Olive Green -->
            <stroke android:width="2dp" android:color="#3D5A2D" /> <!-- Dark green border -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>
