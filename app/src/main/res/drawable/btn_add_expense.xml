<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#3a3a00" /> <!-- very dark greenish -->
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Inner background with inner-shadow effect -->
    <item android:inset="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#2a2a00"
            android:centerColor="#86940c"
            android:endColor="#aabb1c"
            android:angle="270" />

            <corners android:radius="10dp" />
        </shape>
    </item>

</layer-list>
